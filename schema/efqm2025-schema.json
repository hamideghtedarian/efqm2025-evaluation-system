{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EFQM 2025 Assessment Schema",
  "type": "object",
  "properties": {
    "organization": { "type": "string" },
    "evaluator": { "type": "string" },
    "evaluation_date": { "type": "string", "format": "date" },
    "model_version": { "type": "string" },
    "criteria_evaluation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "subcriteria": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "score": { "type": "number", "minimum": 0, "maximum": 100 },
                "radar": {
                  "type": "object",
                  "properties": {
                    "results": { "type": "string" },
                    "approach": { "type": "string" },
                    "deployment": { "type": "string" },
                    "assessment": { "type": "string" },
                    "refinement": { "type": "string" }
                  },
                  "required": ["results", "approach", "deployment"]
                }
              },
              "required": ["id", "title", "score", "radar"]
            }
          }
        },
        "required": ["id", "title", "subcriteria"]
      }
    }
  },
  "required": ["organization", "evaluator", "evaluation_date", "criteria_evaluation"]
}
