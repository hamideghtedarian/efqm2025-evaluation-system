{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EFQM 2025 Assessment Schema",
  "type": "object",
  "properties": {
    "company": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "evaluation_date": { "type": "string", "format": "date" },
        "evaluator_team": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name"]
    },
    "evaluation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "criterion_id": { "type": "string" },
          "approach": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "score": { "type": "number" }
            }
          },
          "deployment": { "$ref": "#/properties/evaluation/items/properties/approach" },
          "assessment": { "$ref": "#/properties/evaluation/items/properties/approach" },
          "refinement": { "$ref": "#/properties/evaluation/items/properties/approach" },
          "feedback_summary": { "type": "string" },
          "overall_score": { "type": "number" }
        },
        "required": ["criterion_id"]
      }
    }
  },
  "required": ["company", "evaluation"]
}
